{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "types": [
      "reflect-metadata",
      "jest"
    ]
  },
  // 只包含浏览器相关的标准库
  "lib": [
    "DOM"
  ],
  "include": [
    "./src/**/*.ts"
  ],
  // 排除测试文件夹下的所有 TypeScript 文件
  "exclude": [
    "node_modules/",
    "test/**/*.ts"
  ]
}
